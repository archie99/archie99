//or only tabs for indentation.
extends layout
block content
	script.
		$('#navhome').removeClass('active');
		$('#navclients').addClass('active');
		$('#navvisits').removeClass('active');	
		
	div.container.well.well-lg
		div.content
			- var clientname = cl.firstname + ' ' + cl.lastname;
			h4 EVENTS: #{clientname}
			each event, i in events
				- var eventcomments = event.comments.replace(/\n/g, '<br>');
				- var d = event.start_date;				
				div.panel-group
					div.panel.panel-default
						div.panel-heading
							div.container
								div.row												
									div.col-lg-3 #{event.start_date.toLocaleDateString()}
									div.col-lg-2 #{event.text}
									div.col-lg-5(style="overflow: auto;") !{eventcomments}						
									div.col-lg-1
										button.showservices.btn.btn-primary.btn-sm(id=event._id)
											span.glyphicon.glyphicon-list									
							br/						
							div.panel-collapse.collapse(event=event._id)	
								div.container.well(style="position: relative; left: 30px; width: 90%;")	
									div.panel-body	
										div												
											a.btn.btn-primary.btn-xs(href="/event/#{event._id}")					
												span.glyphicon.glyphicon-edit
											br/
											br/											
										div(eventresult=event._id)
